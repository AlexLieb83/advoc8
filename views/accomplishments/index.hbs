<h1 class="center-align">Accomplishments</h1>
<div class="row">
  {{#each accomplishments}}
    <div class="col s12 m4">
      <div class="card">
        <div class="card-image">
          {{{editIcon user ../user _id}}}
        </div>
        <div class="card-content center-align">
          <h5>{{title}}</h5>
          <p>{{stripTags (truncate body 150)}}</p>
          <br />
          <div class="chip">
            <img src={{user.image}} alt="Google Profile Image" />
            <a
              href="/accomplishments/user/{{user._id}}"
            >{{user.firstName}}</a>
          </div>
        </div>
        <div class="card-action center-align">
          <a href="/accomplishments/{{_id}}" class="btn light-blue darken-3">Read More</a>
        </div>
      </div>
    </div>
  {{else}}
    <p>No accomplishments to display</p>
  {{/each}}
</div>
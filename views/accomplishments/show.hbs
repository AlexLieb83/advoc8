<div class="row">
  <div class="col s12 m8">
    <h3>{{accomplishment.title}}
      <small>{{{editIcon
          accomplishment.user
          user
          accomplishment._id
          false
        }}}</small>
    </h3>
    <div class="card accomplishment">
      <div class="card-content">
        <span class="card-title">{{formatDate
            date
            "MMMM Do YYYY, h:mm:ss a"
          }}</span>
        {{{accomplishment.body}}}
      </div>
    </div>
  </div>
  <div class="col s12 m4">
    <div class="card center-align">
      <div class="card-content">
        <span class="card-title">{{accomplishment.user.displayName}}</span>
        <img
          src="{{accomplishment.user.image}}"
          referrerpolicy="no-referrer"
          class="circle responsive-img img-small"
        />
      </div>
      <div class="card-action">
        <a
          href="/accomplishments/user/{{accomplishment.user._id}}"
          class="backToAccomplishments"
        >Back to your Accomplishments
          {{accomplishment.user.firstName}}</a>
      </div>
    </div>
  </div>
</div>